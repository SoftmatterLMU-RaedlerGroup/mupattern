{
  "name": "@mupattern/sum-addon",
  "version": "0.1.0",
  "description": "Native addon for fast Uint16Array sum",
  "main": "index.js",
  "types": "index.d.ts",
  "napi": {
    "binaryName": "sum-addon",
    "targets": ["x86_64-pc-windows-msvc", "x86_64-apple-darwin", "x86_64-unknown-linux-gnu", "aarch64-apple-darwin", "aarch64-unknown-linux-gnu"]
  },
  "scripts": {
    "build": "napi build --release --platform",
    "build:debug": "napi build --platform"
  },
  "devDependencies": {
    "@napi-rs/cli": "^3.0.0"
  },
  "engines": {
    "node": ">= 18"
  },
  "os": ["darwin", "linux", "win32"],
  "cpu": ["x64", "arm64"]
}
